{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "incremental": true,
    "lib": ["ES2020", "dom"],
    "jsx": "preserve"
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/server", "test", "src/common"]
}
